<Window x:Class="Checkout.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Checkout"
        mc:Ignorable="d"
        FontSize="20"
        Title="CheckOut" MinHeight="440" MinWidth="520">

    <Window.LayoutTransform>
        <ScaleTransform ScaleX="1.5" ScaleY="1.5"/>
    </Window.LayoutTransform>

    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label>Varukorg</Label>

        <ListBox Grid.Row="1" x:Name="lstProducts"/>

        <Grid Grid.Row="1" Grid.Column="1" Margin="5,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>

            <!-- Enkel Mat -->
            <StackPanel Orientation="Vertical" Grid.Column="0" HorizontalAlignment="Center">
                <Button x:Name="btnFood" Click="ButtonFood" Content="Enkel Mat" Height="70" Width="170" Background="CornflowerBlue"/>
                <StackPanel x:Name="panelFood" Visibility="Collapsed"/>
            </StackPanel>

            <!-- Godis -->
            <StackPanel Orientation="Vertical" Grid.Column="1" HorizontalAlignment="Center">
                <Button x:Name="btnCandy" Click="ButtonCandy" Content="Godis" Height="70" Width="170" Background="SkyBlue"/>
                <StackPanel x:Name="panelCandy" Visibility="Collapsed"/>
            </StackPanel>

            <!-- Tobak -->
            <StackPanel Orientation="Vertical" Grid.Column="2" HorizontalAlignment="Center">
                <Button x:Name="btnTobacco" Click="ButtonTobacco" Content="Tobak" Height="70" Width="170" Background="LightBlue"/>
                <StackPanel x:Name="panelTobacco" Visibility="Collapsed"/>
            </StackPanel>

            <!-- Tidningar -->
            <StackPanel Orientation="Vertical" Grid.Column="3" HorizontalAlignment="Center">
                <Button x:Name="btnPaper" Click="ButtonPaper" Content="Tidningar" Height="70" Width="170" Background="LightSteelBlue"/>
                <StackPanel x:Name="panelPaper" Visibility="Collapsed"/>
            </StackPanel>
        </Grid>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right" Grid.Row="1" Grid.Column="1" Margin="0,0,5,5">
            <Button x:Name="btnPay" Click="ButtonPay" Background="Lime" Height="90" Width="230" Margin="0,0,5,0" Content="Betala"/>
            <Button x:Name="btnClear" Click="ButtonClearCart" Background="Red" Height="90" Width="230" Content="Rensa"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,5,0,0">
            <TextBlock Text="Total Pris:" VerticalAlignment="Center" FontWeight="Bold"/>
            <TextBlock x:Name="txtTotal" Text="0 kr" FontWeight="Bold" Margin="5,0,0,0"/>
        </StackPanel>


    </Grid>
</Window>
