<Window x:Class="Checkout.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Checkout"
        mc:Ignorable="d"
        Title="CheckOut" Height="440" Width="520">
    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label>Varukorg</Label>

        <ListBox Grid.Row="1" x:Name="lstProducts"/>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Grid.Row="1" Grid.Column="1" Margin="5,5,0,5">
            <Button x:Name="btnFood" Click="ButtonFood" Content="Enkel Mat" Height="25px" Width="90px" Margin="0,0,5,0" Background="CornflowerBlue"/>
            <Button x:Name="btnCandy" Click="ButtonCandy" Content="Godis" Height="25px" Width="90px" Background="SkyBlue"/>
            <Button x:Name="btnTobacco" Click="ButtonTobacco" Content="Tobak" Height="25px" Width="90px" Margin="5,0,5,0" Background="LightBlue"/>
            <Button x:Name="btnPaper" Click="ButtonPaper" Content="Tidningar" Height="25px" Width="90px" Background="LightSteelBlue"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right" Grid.Row="1" Grid.Column="1" Margin="0,0,5,5">
            <Button x:Name="btnPay" Click="ButtonPay" Background="Lime" Height="30px" Width="100px" Margin="0,0,5,0" Content="Betala"/>
            <Button x:Name="btnClear" Click="ButtonClearCart" Background="Red" Height="30px" Width="100px" Content="Rensa"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,5,0,0">
            <TextBlock Text="Total Pris:" VerticalAlignment="Center" FontWeight="Bold"/>
            <TextBlock x:Name="txtTotal" Text="0 kr" FontWeight="Bold" Margin="5,0,0,0"/>
        </StackPanel>


    </Grid>
</Window>
